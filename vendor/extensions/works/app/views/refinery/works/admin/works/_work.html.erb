<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(work) -%>">
  <span class='title'>
    <%= work.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.works_work_path(work),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_works_admin_work_path(work),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.works_admin_work_path(work),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => work.title),
        :method => :delete %>
  </span>
</li>
